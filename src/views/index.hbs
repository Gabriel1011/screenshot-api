// V1 ({{adapterV1}})
fetch("{{protocol}}://{{hostname}}/v1/screenshot?url=https://exemplo.com")
  .then(response => response.blob())
  .then(blob => {
    const url = URL.createObjectURL(blob);
    const a = document.createElement("a");
    a.href = url;
    a.download = "screenshot.png";
    a.click();
  });

// V2 ({{adapterV2}})
